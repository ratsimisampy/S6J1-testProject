<% provide(:title, 'Sign up') %>

<div class="container mt-5 mb-5"> <!-- New user form -->
	<div class="form-group col-md-6">
		<h5 class="mb-5">Let's create your account!</h5>
				
		<%= form_for @user do |f|%>


		    <div class="form-group">
		      <label>Name</label>  
		      <%= f.text_field :name, class: "form-control", placeholder: "John" %>
		    </div>

		    <div class="form-group">
		      <label>Family name</label>  
		      <%= f.text_field :last_name, class: "form-control", placeholder: "Doe" %>
		    </div>

		    <div class="form-group">
		      <label>Email</label>  
		      <%= f.email_field :email, class: "form-control", placeholder: "johndoe@email.com" %>
		    </div>

		    <div class="form-group">
		      <label>Password</label>  
		      <%= f.password_field :password, class: "form-control", placeholder: "*******" %>
		    </div>

		    <div class="form-group">
		      <label>Password confirmation</label>  
		      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "*******" %>
		    </div>
		    
		    <div class="form-group">
		      <button type="submit" class="btn btn-primary">Register</button>
		    </div>
	  </div>
	<%end%>
</div>